<% include ./partials/header %>
<div class="row">
    <div class="container">
        <form class="form-width" action="/login" method="POST">
            <h2>Please sign in</h2>
            <div class="form-group">
                <input class="form-control top" type="text" name="username" placeholder="Username" required autofocus>
                <input class="form-control bottom" type="password" name="password" placeholder="Password" required>
                
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Login">
            </div>
            <div class="text-center"><a href="/forgot">Forgot password?</a></div>
            
        </form>
    </div>
</div>
<% include ./partials/footer %>